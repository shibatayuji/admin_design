<% content_for :title, "ユーザー情報変更" %>

<% content_for :head do %>
<%= stylesheet_link_tag "scss/new-user" %>
<% end %>
<div id="pad-wrapper" class="new-user">

	<div class="row header">
		<div class="col-md-12">
			<h3>ユーザー設定</h3>
		</div>
	</div>

	<div class="row form-wrapper">
		<!-- left column -->
		<div class="col-md-9 with-sidebar">
			<div class="container">
				<form class="form-holizontal new_user_form">
					<div class="form-group">
						<label class="control-label" >会社名</label>
						<div class="col-md-8">
							<input class="form-control" type="text" placeholder="株式会社DoBoken" id="company"></div>
						</div>
					<div class="form-group">
						<label class="control-label" >担当者名</label>
						<div class="col-md-8">
							<input class="form-control" type="text" placeholder="田中一郎" id="username">
						</div>
					</div>
					<div class="form-group">
						<label class="control-label" >メールアドレス</label>
						<div class="col-md-8">
							<input class="form-control" type="text">
						</div>
					</div>


					<div class="field-box actions">
						<input type="button" class="btn-glow primary" value="設定を変更">
						<span>パスワードの変更は</span>
						<a href="passwordchange.html" class="passchange">こちらをクリック</a>
					</div>
				</form>
			</div>
		</div>

	</div>
</div>