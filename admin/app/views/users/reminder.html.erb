<% content_for :title, "パスワードリマインダー" %>

<% content_for :head do %>
<%= stylesheet_link_tag "scss/signup" %>
<% end %>

<div class="login-wrapper">
    <div class="box">
        <div class="content-wrap">
            <h6>ご登録時のメールアドレスを入力して下さい。</h6>
            <form class="form-holizontal">
            <div class="form-group">
                <label for="mail" class="col-sm-4 control-label">メールアドレス</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" placeholder="example@example.com" id="mail"></div>
            </div>
            <div class="action">
              	<%= link_to "リマインドメールを送信", users_login_path, :class =>'btn-glow primary signup'%>
            </div>
          </form>
        </div>
    </div>
</div>