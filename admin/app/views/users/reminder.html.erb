<% content_for :title, "パスワードリマインダー" %>

<% content_for :head do %>
<%= stylesheet_link_tag "scss/signup" %>
<% end %>

<div class="login-wrapper">
    <div class="box">
        <div class="content-wrap">
            <h6>ログインに使用されているメールアドレスを入力して下さい。</h6>
            <form class="form-holizontal">
            <div class="form-group">
                <label for="mail" class="col-sm-4 control-label">メールアドレス</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" placeholder="mail@example.com" id="mail"></div>
            </div>
            <div class="action">
              	<%= link_to "送信", users_login_path, :class =>'btn btn-primary signup'%>
            </div>
          </form>
        </div>
    </div>
    <div class="already">
        <%= link_to "ログインページに戻る", users_login_path%>　|　<%= link_to "ユーザー登録する", users_signup_path%>
    </div>
</div>