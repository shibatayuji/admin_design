<% content_for :title, "ユーザー登録" %>

<% content_for :head do %>
<%= stylesheet_link_tag "scss/signup" %>
<% end %>

<div class="login-wrapper">
    <div class="box">
        <div class="content-wrap">
            <h6>ユーザー登録</h6>
            <form class="form-holizontal">
                <div class="form-group" style="height:50px">
                    <label for="company" class="col-sm-4 control-label">会社名</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" placeholder="テスト株式会社" id="company"></div>
                </div>
                <div class="form-group">
                    <label for="username" class="col-sm-4 control-label">ご担当者名</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" placeholder="田中一郎" id="username"></div>
                </div>
                <div class="form-group">
                    <label for="mail" class="col-sm-4 control-label">メールアドレス</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" placeholder="example@example.com" id="mail"></div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-sm-4 control-label">パスワード</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="password" placeholder="password" id="pass">
                        <span>※半角英数字 8文字以上</span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass-conf" class="col-sm-4 control-label">パスワード(確認用)</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="password" placeholder="同じパスワードを入力" id="pass-conf"></div>
                </div>
                    <div class="action">
                        <a class="btn-glow primary signup" href="signin.html">ユーザー登録</a>
                    </div>
            </form>
        </div>
    </div>

    <div class="already">
        <p>ログインページはこちら</p>
        <%= link_to "ログイン", users_login_path%>
    </div>
</div>