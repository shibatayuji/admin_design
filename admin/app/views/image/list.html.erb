<% content_for :title, "ダッシュボード" %>

<% content_for :head do %>
<%= stylesheet_link_tag "scss/gallery" %>
<%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" %>
<%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic" %>
<% end %>

<div id="pad-wrapper" class="gallery">
	<div class="row header">
		<div class="col-md-12">
			<h3>画像管理</h3>
		</div>
	</div>

	<!-- gallery wrapper -->
	<div class="gallery-wrapper">
		<div class="row gallery-row">
			<!-- single image -->
			<div class="col-md-3 img-container new-img">
				<div class="img-box">
					<a data-toggle="modal" href="#myModal">
						<img src="/assets/new-gallery-img.png" class="img-responsive" />
					</a>
				</div>
			</div>

			<!-- single image -->
			<div class="col-md-3 img-container">
				<div class="img-box">
					<span class="icon trash">
						<i class="gallery-trash"></i>
					</span>
					<img src="/assets/gallery2.jpg" class="img-responsive" />
					<p class="title">Beach pic title 2</p>
				</div>
			</div>
			<!-- single image -->
			<div class="col-md-3 img-container">
				<div class="img-box">
					<span class="icon trash">
						<i class="gallery-trash"></i>
					</span>
					<img src="/assets/gallery1.jpg" class="img-responsive" />
					<p class="title">Beach pic title 3</p>
				</div>
			</div>
			<!-- single image -->
			<div class="col-md-3 img-container">
				<div class="img-box">
					<span class="icon trash">
						<i class="gallery-trash"></i>
					</span>
					<img src="/assets/gallery3.jpg" class="img-responsive" />
					<p class="title">Beach pic title</p>
				</div>
			</div>
		</div>
		<div class="row gallery-row">
			<!-- single image -->
			<div class="col-md-3 img-container">
				<div class="img-box">
					<span class="icon trash">
						<i class="gallery-trash"></i>
					</span>
					<img src="/assets/gallery2.jpg" class="img-responsive" />
					<p class="title">Beach pic title 2</p>
				</div>
			</div>
			<!-- single image -->
			<div class="col-md-3 img-container">
				<div class="img-box">
					<span class="icon trash">
						<i class="gallery-trash"></i>
					</span>
					<img src="/assets/gallery1.jpg" class="img-responsive" />
					<p class="title">Beach pic title 3</p>
				</div>
			</div>

			<!-- new image button -->

		</div>
	</div>
	<!-- end gallery wrapper -->

	<!-- blank state -->
	<div class="no-gallery">
		<div class="row header">
		</div>
		<div class="center">
			<img src="/assets/no-img-gallery.png">
			<h6>画像がありません。</h6>
			<p>
				下記のボタンから画像を登録して下さい。
			</p>
			<a data-toggle="modal" href="#myModal" class="btn btn-primary">画像を追加する</a>
		</div>
	</div>
	<!-- end blank state -->
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title">Add new image</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal" role="form">
					<div class="form-group">
						<label for="input1" class="col-lg-2 control-label">Image:</label>
						<div class="col-lg-10">
							<input type="file" id="input1" class="pull-left" />
						</div>
					</div>
					<div class="form-group">
						<label for="input1" class="col-lg-2 control-label">Description:</label>
						<div class="col-lg-10">
							<input type="text" class="form-control" id="inputPassword1" placeholder="Description"></div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div>
<!-- /.modal -->