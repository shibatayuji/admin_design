<!DOCTYPE html>
<html lang="jp">
<head>
  <meta charset="utf-8">
  <title><%= yield :title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= yield :head %>
</head>

<body>
    <!-- navbar -->
    <header class="navbar navbar-inverse" role="banner">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" id="menu-toggler">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to projects_dashboard_path,:class => "navbar-brand" do%>
                <img src="/assets/logo.png">
            <%end%>
        </div>
        <ul class="nav navbar-nav pull-right hidden-xs">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle hidden-xs hidden-sm" data-toggle="dropdown">
                    ho.mu.zu@gmail.com
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to "ユーザー情報変更", site_edit_path%></li>
                    <li><%= link_to "ログアウト", users_login_path%></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle hidden-xs hidden-sm" data-toggle="dropdown">
                    サイトネーム
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li>
											<%= link_to projects_edit_path do %>
                    	サイト情報変更<% end %></li>
                    <li>
											<%= link_to projects_tag_path do %>
                    	タグ確認<% end %></li>
                    <li>
											<%= link_to site_list_path do %>
                    	サイト一覧へ戻る<% end %></li>
                </ul>
            </li>
            <li class="settings hidden-xs hidden-sm">
	            	<%= link_to site_list_path,"data-role" => "button"  do %>
                    <i class="icon-share-alt"></i>
                <% end %>
            </li>
        </ul>
    </header>
    <!-- end navbar -->

    <div id="sidebar-nav">
        <ul id="dashboard-menu">
            <li class="active">
            	<%= link_to projects_dashboard_path do %>
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
                    <i class="icon-dashboard"></i>
                    <span>ダッシュボード</span>
                <%end%>
            </li>
            <li>
            	<%= link_to campaigns_list_path do %>
                    <i class="icon-calendar"></i>
                    <span>クーポン一覧</span>
                <% end %>
            </li>
            <li>
            	<%= link_to campaigns_new_path do %>
                    <i class="icon-pencil"></i>
                    <span>クーポン作成</span>
                <% end %>
            </li>
            <li>
            	<%= link_to image_list_path do %>
                    <i class="icon-picture"></i>
                    <span>画像管理</span>
                <% end %>
            </li>

            <li>
                <a class="dropdown-toggle" href="#">
                    <i class="icon-cog"></i>
                    <span>サイト情報</span>
                    <i class="icon-chevron-down"></i>
                </a>
                <ul class="submenu">
                    <li>
											<%= link_to projects_edit_path do %>
                    	サイト情報変更<% end %></li>
                    <li>
											<%= link_to projects_tag_path do %>
                    	タグ確認<% end %></li>
                </ul>
            </li>
        </ul>
    </div>

    <div class="content">
  		<%= yield %>
		</div>
		<%= yield :foot %>
</body>
</html>
